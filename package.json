{
  "name": "TBA21-API",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "description": "TBA21 API",
  "main": "s",
  "scripts": {
    "test": "npm run clean && ./docker/start_with_tests.sh",
    "test-localdb": "npm run clean && LOCAL=true jest --coverage",
    "offline": "npm run clean && npm run lint && export SLS_DEBUG=true && sls offline start --port 8080",
    "offline-win": "npm run clean && npm run lint && sls offline start --port 8080",
    "test-win-localdb": "npm run clean && jest --coverage",
    "docker-start": "./docker/stop.sh > /dev/null 2>&1 && ./docker/start.sh",
    "docker-stop": "./docker/stop.sh",
    "package": "npm run clean && npm run lint && sls package",
    "lint": "tslint -c ./tslint.json -t stylish -p .",
    "clean": "rimraf .build .serverless coverage",
    "deploy": "npm run clean && npm run lint && serverless deploy --aws-s3-accelerate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AcrossTheCloud/TBA21-API.git"
  },
  "author": "Dan Wood",
  "bugs": {
    "url": "https://github.com/AcrossTheCloud/TBA21-API/issues"
  },
  "homepage": "https://github.com/AcrossTheCloud/TBA21-API",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "pg-promise": "^8.7.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.26",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.462.0",
    "dotenv": "^8.0.0",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "serverless": "^1.43.0",
    "serverless-api-gateway-caching": "^1.4.0",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^4.10.6",
    "serverless-plugin-typescript": "^1.1.7",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
